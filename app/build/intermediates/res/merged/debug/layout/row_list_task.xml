<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:id="@+id/right_swipe_menu"
        android:layout_width="@dimen/right_swipe_layout_width"
        android:layout_height="match_parent"
        android:weightSum="3">

        <TextView
            android:id="@+id/tvEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/right_swipe_background1"
            android:gravity="center"
            android:text="@string/edit"
            android:textColor="@color/right_swipe_txt_color" />

        <TextView
            android:id="@+id/tvResetStart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/right_swipe_background2"
            android:gravity="center"
            android:text="@string/reset_task"
            android:textColor="@color/right_swipe_txt_color" />

        <TextView
            android:id="@+id/tvResetEnd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/right_swipe_background1"
            android:gravity="center"
            android:text="@string/restore_complete"
            android:textColor="@color/right_swipe_txt_color" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/left_swipe_menu"
        android:layout_width="@dimen/left_swipe_layout_width"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:src="@drawable/ic_delete_black_24dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/taskBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_of_task_left_padding"
                android:textColor="@color/task_title"
                android:textSize="@dimen/listTitle_txtSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtListComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/comment_of_task_left_padding"
                android:textSize="@dimen/listComment_txtSize"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtListDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/listDate_txtSize"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="@dimen/btn_start_end_width_height"
            android:layout_height="@dimen/btn_start_end_width_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_date_btn"
            android:background="@drawable/btn_start_selector"
            android:text="@string/start" />

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="@dimen/btn_start_end_width_height"
            android:layout_height="@dimen/btn_start_end_width_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_date_btn"
            android:background="@drawable/btn_finish_selector"
            android:text="@string/finish"
            android:visibility="gone" />
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>