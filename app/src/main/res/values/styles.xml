<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleTutorial" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#5b73de</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="detailTutorial" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ShowcaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">96dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#4a7373</item>
    </style>
    <style name="tutorialStyle" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#b0161616</item>
        <item name="sv_showcaseColor">#6c000000</item>
        <item name="sv_titleTextAppearance">@style/titleTutorial</item>
        <item name="sv_detailTextAppearance">@style/detailTutorial</item>
    </style>

    <style name="listBtnStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="listCommentStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="listTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
